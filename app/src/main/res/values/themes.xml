<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GateKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:fontFamily">@font/baumans_regular</item>
        <!--<item name="android:statusBarColor">@color/black</item>-->
        <item name="colorPrimary">@color/azure</item>
        <item name="colorPrimaryVariant">@color/blue_grotto</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Theme.GateKeeper" parent="Base.Theme.GateKeeper" >
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">
        <item name="colorPrimary">@color/azure</item>
    </style>
    <style name="Widget" />

    <style name="Widget.SampleMessage">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Widget.SampleMessageTile">
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowDy">-3.5</item>
        <item name="android:shadowRadius">2</item>
    </style>


    <style name="AppTheme.ToolbarFont" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/azure</item>
        <item name="android:textColorSecondary">@color/azure</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/baumans_regular</item>
    </style>
</resources>