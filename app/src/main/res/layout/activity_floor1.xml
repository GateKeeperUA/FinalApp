<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="6">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/arrow"
                android:backgroundTint="@color/azure"
                android:onClick="backmain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/toggle"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginEnd="20sp"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/map"
                android:backgroundTint="@color/azure"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            style="@style/room_layout">
            <Button
                android:id="@+id/room101"
                android:text="101"
                style="@style/room_button" />
            <Button
                android:id="@+id/room102"
                android:text="102"
                style="@style/room_button" />
        </LinearLayout>

        <LinearLayout
            style="@style/room_layout">
            <Button
                android:id="@+id/room104"
                android:text="104"
                style="@style/room_button" />
            <Button
                android:id="@+id/room106"
                android:text="106"
                style="@style/room_button" />
        </LinearLayout>

        <LinearLayout
            style="@style/room_layout">
            <Button
                android:id="@+id/room118"
                android:text="118"
                style="@style/room_button" />
            <Button
                android:id="@+id/room119"
                android:text="119"
                style="@style/room_button" />
        </LinearLayout>

        <LinearLayout
            style="@style/room_layout">
            <Button
                android:id="@+id/room120"
                android:text="120"
                style="@style/room_button" />
            <Button
                android:id="@+id/room123"
                android:text="123"
                style="@style/room_button" />
        </LinearLayout>

        <LinearLayout
            style="@style/room_layout">
            <Button
                android:id="@+id/room124"
                android:text="124"
                style="@style/room_button" />
            <Button
                android:id="@+id/room128"
                android:text="128"
                style="@style/room_button" />
        </LinearLayout>

        <LinearLayout
            style="@style/room_layout">
            <Button
                android:id="@+id/room136"
                android:text="136"
                style="@style/room_button" />
            <TextView
                android:backgroundTint="@color/white"
                style="@style/room_button_blanck" />
        </LinearLayout>
    </GridLayout>
</ScrollView>